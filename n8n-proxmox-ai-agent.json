            {
              "name": "X-GitHub-Api-Version",
              "value": "2022-11-28"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"ref\": \"main\",\n  \"inputs\": {\n    \"action\": \"apply\",\n    \"vm_number\": \"1\"\n  }\n}",
        "options": {}
      },
      "id": "github-api",
      "name": "Trigger GitHub Action",
