      "typeVersion": 1,
      "position": [
        240,
        300
      ],
      "webhookId": "proxmox-chat-simple"
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.chatInput }}",
              "operation": "contains",
              "value2": "alma"
            }
          ]
        }
      },
      "id": "if-alma",
      "name": "Check if Alma",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        460,
        300
      ]
    },
    {
      "parameters": {
