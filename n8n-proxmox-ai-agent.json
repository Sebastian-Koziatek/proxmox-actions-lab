        "githubApi": {
          "id": "T0uxxaTNmpGU2PE3",
          "name": "GitHub account"
        }
      }
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "output",
              "value": "VM AlmaLinux #1 creation triggered! Check GitHub Actions."
            }
          ]
        },
        "options": {}
      },
      "id": "set-message",
      "name": "Set Message",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.2,
      "position": [
        800,
        200
      ]
    },
    {
      "parameters": {
        "options": {}
      },
      "id": "respond-success",
      "name": "Respond Success",
      "type": "@n8n/n8n-nodes-langchain.chatTrigger",
      "typeVersion": 1,
      "position": [
        900,
        200
      ]
    },
    {
      "parameters": {
        "respondWith": "text",
        "responseBody": "ℹ️ I can create AlmaLinux VMs. Ask: 'create alma vm'",
        "options": {}
      },
      "id": "respond-help",
      "name": "Respond Help",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        900,
        400
      ]
